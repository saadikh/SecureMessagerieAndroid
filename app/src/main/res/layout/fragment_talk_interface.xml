<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">


    <fragment
            android:id="@+id/fragmentLeft"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            tools:layout="@layout/fragment_contact_list"
            android:name="android.mbds.fr.appct.api.contact.ContactList"/>

    <fragment
            tools:layout="@layout/fragment_messaging"
            android:id="@+id/fragmentRight"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:name="android.mbds.fr.appct.api.contact.Messaging"/>
</LinearLayout>